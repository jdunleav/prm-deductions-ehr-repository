{
  "swagger": "2.0",
  "info": {
    "description": "Service to handle generation of URLs for upload/download from S3",
    "version": "1.0.0",
    "title": "EHR Repository"
  },
  "tags": [],
  "paths": {
    "/health": {
      "get": {
        "tags": [],
        "summary": "Check filestore and database is available",
        "consumes": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successfully return health check report"
          },
          "500": {
            "description": "Unexpected error, couldn't retrieve health status",
            "schema": {
              "$ref": "#/definitions/ValidationErrors"
            }
          },
          "503": {
            "description": "Filestore or Database is currently unavailable",
            "schema": {
              "$ref": "#/definitions/HealthStatus"
            }
          }
        }
      }
    },
    "/error": {
      "get": {
        "tags": [],
        "summary": "Generate error log",
        "consumes": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Successfully create error log"
          }
        }
      }
    },
    "/health-record/{conversationId}/message": {
      "post": {
        "tags": [],
        "summary": "Generate S3 upload URL",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "conversationId",
            "description": "The conversation ID from the EHR messages",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "The message ID from the EHR message fragments",
            "schema": {
              "$ref": "#/definitions/UploadUrlRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successful Generation of URL"
          },
          "401": {
            "description": "Authorization header missing"
          },
          "403": {
            "description": "Authorization key invalid"
          },
          "422": {
            "description": "Validation failed",
            "schema": {
              "$ref": "#/definitions/ValidationErrors"
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/health-record/{conversationId}/message/{messageId}": {
      "put": {
        "tags": [],
        "summary": "Mark message as transfer complete",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "conversationId",
            "description": "The conversation ID from the EHR messages",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "messageId",
            "description": "The message ID from the EHR messages",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Indicates if the transfer has completed successfully",
            "schema": {
              "$ref": "#/definitions/UpdateMessageRequest"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Successful update of message transfer status"
          },
          "401": {
            "description": "Authorization header missing"
          },
          "403": {
            "description": "Authorization key invalid"
          },
          "422": {
            "description": "Validation failed",
            "schema": {
              "$ref": "#/definitions/ValidationErrors"
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "UploadUrlRequest": {
      "type": "object",
      "properties": {
        "messageId": {
          "type": "string"
        }
      },
      "required": [
        "messageId"
      ]
    },
    "UpdateMessageRequest": {
      "type": "object",
      "properties": {
        "transferComplete": {
          "type": "boolean"
        }
      },
      "required": [
        "transferComplete"
      ]
    },
    "ValidationErrors": {
      "type": "object",
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "An object with the name of the field in error as the key and the error message as the value",
            "properties": {}
          }
        }
      }
    },
    "HealthStatus": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "node_env": {
          "type": "string"
        },
        "details": {
          "type": "object",
          "properties": {
            "filestore": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "bucketName": {
                  "type": "string"
                },
                "available": {
                  "type": "boolean"
                },
                "writable": {
                  "type": "boolean"
                },
                "error": {
                  "type": "object"
                }
              }
            },
            "database": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "connection": {
                  "type": "boolean"
                },
                "writable": {
                  "type": "boolean"
                },
                "error": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}